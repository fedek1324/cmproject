<?xml version='1.0' encoding='UTF-8'?>
<ui xmlns="http://www.intertrust.ru/schema/palette/tn-ui">
  <form schema-ref="DialogSelectArcDealsByArcDep" id="DialogSelectArcDealsByArcDepForm" name="${ui.form.DialogSelectArcDealsByArcDepForm.name:Выбор Архивного дела}" projection="default">
    <properties>
      <hide condition-union="AND">
        <negative-condition-ref ref="dialog"/>
      </hide>
    </properties>
    <component>
      <field attribute-ref="arcObjectInfo" name="${ui.form.DialogSelectArcDealsByArcDepForm.field.personInfo.name:Выбор Архивного дела}">
        <properties>
          <require condition-union="AND">
            <condition>true</condition>
          </require>
        </properties>
        <appearance open-mode="grid" digest-mode="grid" importance="normal" widget="grid"/>
        <directories limit-livesearch="sys-current" digest="grid">
          <directory-ref ref="archives-arc-deals-by-arc-dep"/>
        </directories>
      </field>
      <button name="${ui.form.DialogSelectArcDealsByArcDepForm.button.OK.name:Принять в архив}">
        <action>
          <system name="submit"/>
        </action>
      </button>
    </component>
  </form>
</ui>