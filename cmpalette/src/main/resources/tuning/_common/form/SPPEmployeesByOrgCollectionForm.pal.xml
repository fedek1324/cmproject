<?xml version='1.0' encoding='UTF-8'?>
<ui xmlns="http://www.intertrust.ru/schema/palette/tn-ui">
  <form schema-ref="SPPEmployeesByOrgCollection" id="SPPEmployeesByOrgCollectionForm" name="${ui.form.SPPEmployeesByOrgCollectionForm.name:Досье сотрудников организаций}" projection="default">
    <properties>
      <hide condition-union="AND">
        <negative-condition-ref ref="edit"/>
        <negative-condition-ref ref="read"/>
      </hide>
    </properties>
    <component>
      <section id="RootMenu" name="${ui.form.SPPEmployeesByOrgCollectionForm.section.RootMenu.name:SPPEmployeesByOrgMenu}">
        <component>
          <button name="${ui.form.SPPEmployeesByOrgCollectionForm.section.RootMenu.button.Скрыть системную кнопку 'Добавить в избранное'.name:Скрыть системную кнопку 'Добавить в избранное'}">
            <properties>
              <hide condition-union="AND">
                <condition>true</condition>
              </hide>
            </properties>
            <action>
              <system name="ADD_LINK_TO_FAVORITE_FOLDER"/>
            </action>
          </button>
          <button name="${ui.form.SPPEmployeesByOrgCollectionForm.section.RootMenu.button.Добавить сотрудника.name:Добавить сотрудника}">
            <properties>
              <hide condition-union="AND">
                <negative-condition-ref ref="SPPEmployeeByOrgCollection_canCreate"/>
              </hide>
            </properties>
            <action>
              <custom>
                <create schema-ref="SPPDossier">
                  <module ident="PersonDirectory" complect=""/>
                </create>
              </custom>
            </action>
          </button>
        </component>
      </section>
    </component>
  </form>
</ui>